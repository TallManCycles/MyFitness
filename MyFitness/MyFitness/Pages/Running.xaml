<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFitness.Pages.Running">
  <StackLayout
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="CenterAndExpand"
        Padding="20" Spacing="20">
    <Label x:Name="RunLabel"
            IsEnabled="False"
            Text="What is your current fastest pace for a 10km Run?"
            FontSize="Large"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"/>
    <Picker x:Name="RunTimes"
            Title="Select Fastest Time"
            SelectedIndex="0"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"></Picker>
    <Button x:Name="SaveButton" Text="Continue" Clicked="OnSave" HorizontalOptions="FillAndExpand"/>
  </StackLayout>
</ContentPage>