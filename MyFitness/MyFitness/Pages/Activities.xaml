<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFitness.Pages.Activities">
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />
  <ScrollView>
    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
      <Label Text="Activities" FontSize="Large" HorizontalOptions="CenterAndExpand"/>
      <ListView x:Name="ActivityView" 
                HorizontalOptions="FillAndExpand"                 
                VerticalOptions="FillAndExpand" 
                ItemSelected="SelectedCell" BackgroundColor="Transparent">
        <ListView.ItemTemplate HorizontalOptions="CenterAndExpand">
          <DataTemplate>
            <TextCell x:Name="NewTextCell"
                      Text="{Binding ActivityName}"
                      Detail="{Binding SufferScore, StringFormat='Suffer Score: {0: 0.0}'}"/>                  
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ScrollView>
</ContentPage>