<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFitness.Pages.Activities">
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />
  <ScrollView>
    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
      <Label Text="Activities" FontSize="Large" HorizontalOptions="CenterAndExpand"/>
      <ListView x:Name="ActivityView" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ItemSelected="SelectedCell">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Label Text="{Binding ActivityName}" FontSize="Small" HorizontalTextAlignment="Center"/>
                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                  <Label Text="{Binding TSS, StringFormat='Suffer Score: {0}'}" FontSize="Small"/>
                  <Label Text="{Binding Date, StringFormat='{0: dddd dd MMMM}'}" FontSize="Small"/>
                </StackLayout>
              </StackLayout>
            </ViewCell>                    
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ScrollView>
</ContentPage>