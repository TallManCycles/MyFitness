<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFitness.Pages.MainPage">
  <ScrollView>
  <StackLayout x:Name="MainLayout" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Padding="10">
    <Label x:Name="AthleteName" FontSize="30" HorizontalOptions="CenterAndExpand" />
    
    <Label Text="Fitness" FontSize="Large" HorizontalOptions="CenterAndExpand" />
    <Label Text="{Binding Fitness, StringFormat='{0: 0.0}'}" FontSize="25" HorizontalOptions="CenterAndExpand" />

    <Label Text="Fatigue" FontSize="Large" HorizontalOptions="CenterAndExpand" />
    <Label Text="{Binding Fatigue, StringFormat='{0: 0.0}'}" FontSize="25" HorizontalOptions="CenterAndExpand" />

    <Label Text="Overall Form" FontSize="Large" HorizontalOptions="CenterAndExpand" />
    <Label Text="{Binding Form, StringFormat='{0: 0.0}'}" FontSize="25" HorizontalOptions="CenterAndExpand" />
       
    <Button Text="Refresh" FontSize="Large" Clicked="Refresh" HorizontalOptions="FillAndExpand"/>
  </StackLayout>
</ScrollView>
</ContentPage>