<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFitness.Pages.MainPage">
  <StackLayout x:Name="MainLayout" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
    <Label Text="Fitness" FontSize="Large" HorizontalOptions="CenterAndExpand" />
    <Label Text="{Binding Fitness}" FontSize="Large" HorizontalOptions="CenterAndExpand" />

    <Label Text="Fatigue" FontSize="Large" HorizontalOptions="CenterAndExpand" />
    <Label Text="{Binding Fatigue}" FontSize="Large" HorizontalOptions="CenterAndExpand" />

    <Label Text="Overall Form" FontSize="Large" HorizontalOptions="CenterAndExpand" />
    <Label Text="{Binding Form}" FontSize="Large" HorizontalOptions="CenterAndExpand" />

    <Entry x:Name="TSSEntry" Placeholder="Manual Tss" FontSize="Large" HorizontalOptions="CenterAndExpand" />
    <Button Text="Submit" FontSize="Large" Clicked="ManualEntry" />
  </StackLayout>
</ContentPage>